{
  "name": "annual_report_container_v2_normalized",
  "strict": true,
  "schema": {
    "type": "object",
    "definitions": {
      "Record": {
        "type": "object",
        "nullable": true,
        "description": "Single period record.",
        "required": [
          "rn",
          "y",
          "pt",
          "am",
          "dc"
        ],
        "properties": {
          "rn": {
            "type": "string",
            "nullable": true,
            "description": "Accounting code or raw UPPER_SNAKE_CASE name of the record."
          },
          "pt": {
            "type": "string",
            "enum": [
              "FY",
              "HY1",
              "HY2",
              "Q1",
              "Q2",
              "Q3",
              "Q4"
            ],
            "nullable": true,
            "description": "Period type: FY=full year, HY1/2=half year, Q1-Q4=quarter."
          },
          "y": {
            "type": "integer",
            "nullable": true,
            "description": "Calendar year of this period."
          },
          "am": {
            "type": "integer",
            "nullable": true,
            "description": "Value in minor units (e.g. cents)."
          },
          "dc": {
            "type": "string",
            "enum": [
              "D",
              "C"
            ],
            "nullable": true,
            "description": "Debit (D), Credit (C)"
          }
        },
        "additionalProperties": false
      }
    },
    "description": "Top-level container for an annual financial report with multiple reporting periods.",
    "required": [
      "cn",
      "cur",
      "fy",
      "r"
    ],
    "properties": {
      "cn": {
        "type": "string",
        "nullable": true,
        "description": "Company name as shown on the report."
      },
      "fy": {
        "type": "integer",
        "nullable": true,
        "description": "Primary fiscal year of the report (4-digit)."
      },
      "cur": {
        "type": "string",
        "pattern": "^[A-Z]{3}$",
        "nullable": true,
        "description": "Base ISO-4217 currency code of the report (e.g., EUR, USD)."
      },
      "r": {
        "type": "array",
        "minItems": 0,
        "description": "Report records.",
        "items": {
          "$ref": "#/definitions/Records"
        }
      }
    },
    "additionalProperties": false
  }
}